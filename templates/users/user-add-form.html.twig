{% extends 'base.html.twig' %}

{% block stylesheet %}
  {{ encore_entry_link_tags('app') }}
{% endblock %}

{%  block title %}
    {{ 'user.title.add' | trans({}, 'forms') }}
{%  endblock %}

{% block sidebar %}
    {% include '_partials/sidebar.html.twig' %}
{% endblock %}

{% block body %}
    {% if form is defined %}
        {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="row mt-3">
                <div class="col-md-6">
                    {# The user first name #}
                    {{ form_label(form.firstName, 'user.label.first-name') }}
                    {{ form_widget(form.firstName, {
                        'attr' : {'class': 'form-control'}
                    }) }}
                </div>
                <div class="col-md-6">
                    {# The user last name #}
                    {{ form_label(form.lastName, 'user.label.last-name') }}
                    {{ form_widget(form.lastName, {
                        'attr' : {'class': 'form-control'}
                    }) }}
                </div>
            </div>

            <div class="row mt-3">
                <div class="col">
                    {# The user mail address #}
                    {{ form_label(form.email, 'user.label.email') }}
                    {{ form_widget(form.email, {
                        'attr' : {'class': 'form-control'}
                    }) }}
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-4">
                    {# The user password #}
                    {{ form_label(form.password.first, 'user.label.password') }}
                    {{ form_widget(form.password.first, {
                        'attr' : {'class': 'form-control'}
                    }) }}
                </div>
                <div class="col-md-4">
                    {{ form_label(form.password.second, 'user.label.password-repeat', {
                        'label_attr': {'class': 'font-italic'}
                    }) }}
                    {{ form_widget(form.password.second, {
                        'attr' : {'class': 'form-control'}
                    }) }}
                </div>
                <div class="col-md-4">
                    {# The user active state #}
                    {{ form_label(form.active, 'user.label.is-active') }}
                    {{ form_widget(form.active, {
                        'attr' : {'class': 'form-control'}
                    }) }}
                </div>
            </div>

            <div class="row mt-4 p-1">
                <div class="col">
                    {# Submit button #}
                    {{ form_row(form.submit, {'label': 'common.send',
                            'attr': {'class': 'btn btn-primary'}
                    }) }}
                </div>
            </div>
        {{ form_end(form) }}

    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
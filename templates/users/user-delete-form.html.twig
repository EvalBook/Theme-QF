{% trans_default_domain 'forms' %}

<i style="cursor: pointer;" class="far fa-trash-alt" data-toggle="modal" data-target="#modal-right-user-delete-{{ id }}"></i>

<div class="modal right fade in" id="modal-right-user-delete-{{ id }}" tabindex="-1" role="dialog" aria-labelledby="modal-right">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3>{{ 'user.title.delete'|trans }}</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body mb-2">
                <p>
                    {{ 'user.message.confirm.delete'|trans }}
                </p>
                <div class="mt-3">
                    <a class="btn btn-primary" href="{{ path('users_delete_confirm',{'id' : id}) }}">
                        {{ 'common.yes'|trans }}
                    </a>

                    <a class="btn btn-secondary" href="{{ path('users_delete') }}">
                        {{ 'common.no'|trans }}
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
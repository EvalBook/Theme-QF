{% extends 'base.html.twig' %}
{% trans_default_domain 'templates' %}

{% block title %}{{ 'implantations.title.list' | trans }}{% endblock %}

{% block sidebar %}
    {% include '_partials/sidebar.html.twig' %}
{% endblock %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">{{ 'implantations.th.id' | trans }}</th>
            <th scope="col">{{ 'implantations.th.name' | trans }}</th>
            <th scope="col">{{ 'implantations.th.address' | trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for implantation in implantations %}
            <tr>
                <th scope="row">{{ implantation.id }}</th>
                <td>{{ implantation.name }}</td>
                <td>
                    {{ implantation.address }}, {{ implantation.zipCode }} {{ implantation.country }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'implantations.th.not-found' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
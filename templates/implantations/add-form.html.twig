{% extends 'base.html.twig' %}

{%  block title %}
    {{ 'implantations.title.add' | trans({}, 'forms') }}
{%  endblock %}

{% block sidebar %}
    {% include '_partials/sidebar.html.twig' %}
{% endblock %}

{% block body %}
    {% if implantationForm is defined %}
        {{ form_start(implantationForm) }}
        {{ form_errors(implantationForm) }}

        <div class="row mt-3">
            <div class="col">
                {# The implantation name #}
                {{ form_label(implantationForm.name, 'implantations.label.name') }}
                {{ form_widget(implantationForm.name, {
                    'attr' : {'class': 'form-control'}
                }) }}
            </div>
            <div class="col">
                {# The implantation address #}
                {{ form_label(implantationForm.address, 'implantations.label.address') }}
                {{ form_widget(implantationForm.address, {
                    'attr' : {'class': 'form-control'}
                }) }}
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                {# The implantation zip code #}
                {{ form_label(implantationForm.zipCode, 'implantations.label.zip-code') }}
                {{ form_widget(implantationForm.zipCode, {
                    'attr' : {'class': 'form-control'}
                }) }}
            </div>
            <div class="col">
                {# The implantation country #}
                {{ form_label(implantationForm.country, 'implantations.label.country') }}
                {{ form_widget(implantationForm.country, {
                    'attr' : {'class': 'form-control'}
                }) }}
            </div>

        </div>

        <div class="row mt-2 p-1">
            <div class="col">
                {# Submit button #}
                {{ form_row(implantationForm.submit, {'label': 'common.send',
                    'attr': {'class': 'btn btn-primary'}
                }) }}
            </div>
        </div>

        {{ form_end(implantationForm) }}

    {% endif %}
{% endblock %}